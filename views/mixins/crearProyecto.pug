mixin crearProyecto(proyecto = {})

  form.agregar-proyecto(action=`/new-project/${proyecto.id || ''}` method="POST")
    .campo
      label(for="name") Nombre proyecto
      input(value=proyecto.nombre type="text" id="name" name="nombre" placeholder="Nombre proyecto")
    .campo.enviar
      input(type="submit" value=`${proyecto.nombre ? 'Guardar' : 'Agregar'}` class="boton")